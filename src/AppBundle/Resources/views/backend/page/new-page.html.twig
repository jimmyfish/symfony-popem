{% extends 'backend/layouts.html.twig' %}

{% block content %}
<section class="table-layout animated fadeIn">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                &nbsp;
            </div>
            <div class="col-md-6">
                <div class="panel" style="border:6px solid rgba(204, 204, 204,0.5)">
                    <div class="panel-heading">
                        {% for message in app.session.getFlashBag.get('message_error') %}
                            <div class="alert alert-danger alert-dismissable">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true"><i class="fa fa-times"></i></button>
                                <span style="color:#444">{{ message}}</span>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="panel-body">
                        <form method="post" class="form-horizontal" enctype="multipart/form-data">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <label for="title">Title</label>
                                    <input type="text" name="title" id="title" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <label for="body">Body</label>
                                    <textarea name="body" id="body" class="content" cols="30" rows="10"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <label for="image">Image</label>
                                    <input type="file" name="image" id="image" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <label for="tag">Tag</label>
                                    <select name="tag[]" id="select2" class="form-control" multiple="multiple">
                                        {% for item in tag %}
                                            <option value="{{ item.id }}">{{ item.nameTag }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <label for="meta-keyword">Meta Keyword</label>
                                    <input type="text" name="meta-keyword" id="meta-keyword" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <label for="meta-description">Meta Description</label>
                                    <input type="text" name="meta-description" id="meta-description" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <button class="btn btn-primary btn-flat pull-right">submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                &nbsp;
            </div>
        </div>
    </div>
</section>
{% endblock %}
{% block customJS %}
    <script>
        tinymce.init({
            selector:'.content',
            height:300,
            menubar: 'tools',
            statusbar:false,
            plugins: 'code',
//            plugins: 'image',
            inline_styles: false
        });

        $('#select2').select2({
            multiple : true
        });
    </script>
{% endblock %}