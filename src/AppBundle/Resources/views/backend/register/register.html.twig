<body class="hold-transition login-page">
<div class="login-box">
    <div class="login-logo">
        <a href="{{ ('/home') }}"><b>PROINSTA</b>&nbsp;system</a>
    </div><!-- /.login-logo -->
    <div class="login-box-body">
        <p class="login-box-msg">Silahkan Register terlebih dahulu</p>

        <form method="post" class="form-horizontal">
            {% for message in app.session.getFlashBag.get('message_success') %}
                <div class="alert alert-success alert-dismissable" >
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    {{ message }}
                </div>

            {% endfor %}
            {% for message in app.session.getFlashBag.get('message_error') %}
                <div class="alert alert-danger alert-dismissable" >
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    {{ message }}
                </div>

            {% endfor %}

            <div class="form-group has-feedback">
                <label for="username">Username</label>
                <input type="text" name="username" id="username" class="form-control">
            </div>

            <div class="form-group has-feedback">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" class="form-control">
            </div>

            <div class="form-group has-feedback">
                <input type="submit" value="submit" class="btn btn-primary btn-flat pull-right">
            </div>
        </form>

    </div><!-- /.login-box-body -->
</div><!-- /.login-box -->

<!-- jQuery 2.1.4 -->
<script src="{{ asset('assets_backend') }}/plugins/jQuery/jQuery-2.1.4.min.js"></script>
<!-- Bootstrap 3.3.5 -->
<script src="{{ asset('assets_backend') }}/bootstrap/js/bootstrap.min.js"></script>
<!-- iCheck -->
<script src="{{ asset('assets_backend') }}/plugins/iCheck/icheck.min.js"></script>
<script>
    $(function () {
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%' // optional
        });
    });
</script>
</body>
</html>
