{% extends 'Client/dashboard.layout.html.twig' %}

{% block mainContent %}
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h2 class="mb-20 mt-20">Withdrawal Balance</h2>

                <form action="{{ path('popem_client_withdrawal_client_post') }}" method="post">
                    <p>Balance <strong>(Rp.)</strong> : <span><strong>{{ balance.balance_string }}</strong></span></p>
                    <div class="form-group">
                        <label for="withdrawal-amount">Amount :</label>
                        <input type="number" name="withdrawal-amount" id="withdrawal-amount" class="form-control">
                    </div>
                    <div class="form-group text-right">
                        <input type="submit" value="Withdraw" class="btn red-button">
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}