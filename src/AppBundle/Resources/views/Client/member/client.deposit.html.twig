{% extends 'Client/dashboard.layout.html.twig' %}

{% block mainContent %}
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h2 class="mb-20 mt-20">Deposit Balance</h2>
                {% for msg in app.session.getFlashBag.get('message_error') %}
                    <div class="alert alert-warning">
                        <strong>Pemberitahuan !</strong> {{ msg }}
                    </div>
                {% endfor %}
                {% for msg in app.session.getFlashBag.get('message') %}
                    <div class="alert alert-success">
                        <strong>Sukses !</strong> {{ msg }}
                    </div>
                {% endfor %}

                <form action="{{ path('popem_client_deposit_client') }}" method="post">
                    <div class="form-group">
                        <label for="bank_id">ID Bank</label>
                        <select name="bank_id" id="bank_id" class="form-control">
                            {% for info in information.bank.data.data %}
                                <option value="{{ info.bank_id }}">{{ info.bank_name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="amount">Jumlah (Rupiah)</label>
                        <input type="text" class="form-control" name="amount" id="amount">
                    </div>
                    <div class="form-group">
                        <label for="bank_name">Nama Bank</label>
                        <input type="text" class="form-control" name="bank_name" id="bank_name">
                    </div>
                    <div class="form-group">
                        <label for="bank_account">Akun Bank</label>
                        <input type="text" class="form-control" name="bank_account" id="bank_account">
                    </div>
                    <div class="form-group">
                        <label for="bank_beneficiary_name">Nama Pemilik Bank</label>
                        <input type="text" class="form-control" name="bank_beneficiary_name" id="bank_beneficiary_name">
                    </div>
                    <div class="form-group text-right">
                        <input type="submit" value="Deposit" class="btn red-button">
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}