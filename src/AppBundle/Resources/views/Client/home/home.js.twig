// BINDING REGISTER FUNCTION
function registerAction(e) {
    e.preventDefault();
    var wrapper = jQuery('.content-main'),
        container = wrapper.find('form'),
        sendInfo = {
            "username": container.find('#username').val(),
            "email": container.find('#email').val(),
            "password": container.find('#password').val(),
            "passconf": container.find('#password-confirm').val()
        },
        sourcePath = "{{ path('popem_api_client_register') }}";

    container.find('button').val('Memproses ...');
    container.find('input, button').prop('disabled', true);
    container.find('.spinner').removeClass('hide');

    $.ajax({
        type: 'POST',
        url: sourcePath,
        data: sendInfo,
        success: function (msg) {
            if (msg.status === true) {
                wrapper.html('Terima Kasih, Pendaftaran telah berhasil diproses, silahkan aktivasi melalui link yang kami kirimkan melalui email anda');
            }
        }
    });
}

function depositAction(e) {
    e.preventDefault();
    var wrapper = jQuery('.content-main'),
        container = wrapper.find('form'),
        sourcePath = "{{ path('popem_api_client_deposit_account') }}",
        formData = new FormData();

        formData.append("fileInput", container.find('#file')[0].files[0]);

    var sendInfo = {
        "broker_id": parseInt(container.find('#deposit__broker').val()),
        "login": parseInt(container.find('#login').val()),
        "email": container.find('#email').val(),
        "phone": container.find('#phone').val(),
        "bank_name": container.find('#bank_name').val(),
        "bank_account": parseInt(container.find('#bank_account').val()),
        "bank_beneficiary_name": container.find('#bank_beneficiary_name').val(),
        "bank_id": parseInt(container.find('#bank_id').val()),
