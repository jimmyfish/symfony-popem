{% extends 'Client/layout.html.twig' %}

{% block content %}
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <form action="">
                        <div class="form-group">
                            <label for="username">Username :</label>
                            <input type="text" name="username" id="username" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="password">Username :</label>
                            <input type="password" name="password" id="password" class="form-control">
                        </div>
                        <input type="submit" value="OK">

                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block customJS %}
    <script>
        $(function () {
            $('form').submit(function(e) {
                e.preventDefault();
                var username = $('#username').val(),
                    password = $('#password').val(),
                    sendInfo = {"username": username, "password": password};

                console.log("top message : " + sendInfo);

                $.ajax({
                    type: 'POST',
                    url: 'http://localhost:1234/login',
                    data: sendInfo,
                    dataType: 'json',
                    contentType: "application/json; charset=utf-8",
                    headers: {
                        "Authorization": "Basic cG9wZW1fYXV0aDpCbGluazE4Mg=="
                    },
                    success: function(msg) {
                        if (msg.status == true) {
                            console.log('Ok');
                        }
                    },
                    error: function (errorMsg) {
                        console.log(errorMsg.status);
                    }
                });
            });
        });
    </script>
{% endblock %}