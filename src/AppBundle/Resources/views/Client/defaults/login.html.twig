{% extends 'Client/layout.html.twig' %}

{% block content %}
    <section>
        <div class="container">
            <div class="row mt-50 mb-50">
                <div class="col-md-6 col-md-offset-3 form-wrapper">
                    {% for msg in app.session.getFlashBag.get('message') %}
                        <div class="alert alert-warning">
                            <strong>Pemberitahuan !</strong> {{ msg }}
                        </div>
                    {% endfor %}
                    <form action="">
                        <div class="form-group">
                            <label for="username">Username :</label>
                            <input type="text" name="username" id="username" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="password">Password :</label>
                            <input type="password" name="password" id="password" class="form-control">
                        </div>
                        <div class="form-group text-right">
                            <input type="submit" value="Login" class="btn red-button">
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block customJS %}
    <script>
        $(function () {
            $('form').submit(function(e) {
                e.preventDefault();
                var username = $('#username').val(),
                    password = $('#password').val(),
                    sendInfo = {"username": username, "password": password},
                    sourcePath = "{{ path('popem_api_client_login') }}",
                    destPath = "{{ path('popem_client_dashboard') }}",
                    input = $(this).find('input');

                input.prop('disabled', true);
                $(this).find('.process-text').text('Processing ...');

                $.ajax({
                    type: 'POST',
                    url: sourcePath,
                    data: sendInfo,
                    success: function (msg) {
                        if (msg.data.status === true) location.href = destPath
                    }
                });
            });
        });
    </script>
{% endblock %}