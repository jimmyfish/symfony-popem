{% extends 'Client/layout.html.twig' %}

{% block title %}Member Area{% endblock %}

{% block content %}
    <section id="main-content">
        <div class="container-fluid">
            <div class="row flex-row">
                <div class="col-md-3 content-wrapper no-padding dark-background">
                    <div id="account-summary" class="dark-background ptb-25 plr-30">
                        <div class="text-center">
                            <img src="{{ asset('assets_client/img/profile.jpg') }}" alt="" class="img-dashboard"
                                 height="100">
                            <p class="text-sunflower fz-19 mt-20">Jimmy Fish</p>
                            <p class="text-clouds">$ <span id="balance">12000</span></p>
                            <p>
                                <a href="{{ path('popem_client_logout') }}">
                                    Logout
                                </a>
                            </p>
                        </div>
                    </div>
                    <div class="sidebar-menu">
                        <div class="panel-group" id="accordionMenu" role="tablist" aria-multiselectable="true">
                            <a href="{{ path('popem_client_dashboard') }}">Dashboard</a>
                            <a href="{{ path('popem_client_validate_client') }}">Validate Client</a>
                            <a href="{{ path('popem_client_withdrawal_client') }}">Withdrawal</a>
                            <a href="{{ path('popem_client_deposit_client') }}">Deposit</a>
                            <a href="{{ path('popem_client_transfer') }}">Transfer Client</a>
                            <div class="panel panel-default">
                                <div class="panel-heading" role="tab" id="headingTwo">
                                    <h4 class="panel-title">
                                        <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordionMenu" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                            Account
                                        </a>
                                    </h4>
                                </div>
                                <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
                                    <div class="panel-body">
                                        <ul class="nav">
                                            <li><a href="{{ path('popem_client_list_account') }}">List Account</a></li>
                                            <li><a href="{{ path('popem_client_add_account') }}">Add Account</a></li>
                                            <li><a href="{{ path('popem_client_validate_account') }}">Validate Account</a></li>
                                            <li><a href="{{ path('popem_client_transfer_account') }}">Transfer Account</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <a href="{{ path('popem_client_setting_password') }}">Pengaturan</a>
                        </div>
                    </div>
                    <div class="latest-news dark-background ptb-25 plr-30">
                        <p class="text-sunflower fz-19">Latest News</p>
                        <div class="row">
                            {% for news in latest %}
                                <div class="item">
                                    <div class="col-xs-12">
                                        <a href="{{ path('popem_client_detail_blog',{slug: news.slug}) }}">
                                            <p class="news-title text-base iq-fw-700">
                                                {% if news.title is defined %}
                                                    {{ news.title }}
                                                {% endif %}
                                            </p>
                                        </a>
                                        <p class="news-desc text-clouds">
                                            {% if news.body is defined %}
                                                {{ news.body | raw }}
                                            {% endif %}
                                        </p>
                                    </div>
                                </div>
                            {% endfor %}

                        </div>
                    </div>
                </div>
                <div class="col-md-8 content-wrapper">
                    {% block mainContent %}{% endblock %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block vendorJS %}
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.material.min.js"></script>
{% endblock %}

{% block customJS %}
    <script>
        {% include '@main_template/Client/additional/dashboard.js.twig' %}
    </script>
    {% block innerJS %}{% endblock %}
{% endblock %}